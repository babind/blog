<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table-resposive table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Add comments</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
         <td><%=link_to post.name,post%></td>
        <td><%= post.title %>
        </td>
        <td><%= post.content %>
             

              <% post.comments.each do |comment| %>

                <table>
                  <thead>
                  <tr>
                  <th><%= comment.commenter %></th>
                  </tr>
                  <tbody>
                  <tr>
                  <td><%= comment.body %></td>
                </tr>
                </tbody>
            </table>
            <% end %>
        </td>
        <td><%= link_to 'Add comments', new_post_comment_path(post) %></td>
        <td>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '<button type="button">New Post</button>'.html_safe, new_post_path %>
 
 