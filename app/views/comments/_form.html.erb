 

 <%= form_for([@post, @new_comment], remote: true) do |f| %>


    <%= render 'shared/error_messages', object: f.object %>


    <div class="field">
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
